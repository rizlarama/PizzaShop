<!DOCTYPE html>
<html>
<head>
	<h3>Your order:</h3>
</head>

<body>
	<!--<div id="container"></div> -->

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Quantity</th>
    </tr>
  </thead>
  <tbody>
  	<% @items.each do |item| %>
    <tr>
      <th scope="row"><%= item[0].id %></th>
      <td><%= item[0].title %></td>
      <td><%= item[0].price %> rub</td>
      <td><%= item[1] %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br /> <br />
<h3>Please, fill form:</h3>
	<form action="/order" method="POST">

	    <div class="form-group">
		    <label>Your phone</label>
		    <input name="order[phone]" type="text" class="form-control" placeholder="Your phone" value="<%= @order.phone %>">
	    </div>

		<div class="form-group">
		    <label>Your name</label>
		    <input name="order[name]" type="text" class="form-control" placeholder="Your name" value="<%= @order.name %>">
		</div>

		<div class="form-group">
		    <label>Your address</label>
		    <input name="order[address]" type="text" class="form-control" placeholder="Your address" value="<%= @order.address %>">
		</div>

		<div class="form-group">
		    <label>Your count of products:    </label>
		    <label id="label_orders" name="">      </label>
		    <input id="number_of_orders" name="order[number_orders]" type="text" class="form-control"> 
		</div>

  		<button type="submit" class="btn btn-primary">Send</button>

	</form>
</body>

</html>

<script type="text/javascript">
	orders_to_table();
	update_label_orders();
</script>