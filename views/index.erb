<h2>Welcome to Pizza Shop!</h2>

<div class="row">

	<% @products.each do |product| %>
		<div class="col-md-3">
			<div id="pizza_title">
				<%= product.title %>
			</div>

			<div id="image">
				<img src="<%= product.path_to_image %>" height="200" width="200"/>
			</div>

			<div id="content">
				<%= product.description %>
			</div>

			<div id="content">
				Size: <%= product.size %> cm
			</div>

			<div id="content">
				Price: <%= product.price %> rub
			</div>
			
			<div id="button_insert">
				<button type="button" class="btn btn-success btn-sm" onclick="add_to_cart(<%= product.id %>)">Add to cart</button>
			</div>

		</div>
	<% end %>

</div>
